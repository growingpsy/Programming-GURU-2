<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GURU2_22_Memorite" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- 색상 변경 -->
        <item name="colorPrimaryDark">@color/theme_darkgreen</item>
        <item name="colorPrimary">@color/theme_green</item>

        <!-- 폰트 변경 -->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckBoxFontStyle</item>
    </style>

    <style name="Theme.GURU2_22_Memorite" parent="Base.Theme.GURU2_22_Memorite" />

    <style name="Theme.GURU2_22_Memorite.noActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/theme_darkgreen</item>
    </style>

    <!--커스텀 폰트 관련-->
    <style name="customTextViewFontStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanumsquareround_regular</item>
    </style>
    <style name="customEditTextFontStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/nanumsquareround_regular</item>
    </style>
    <style name="customRadioButtonFontStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/nanumsquareround_regular</item>
    </style>
    <style name="customCheckBoxFontStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/nanumsquareround_regular</item>
    </style>


    <style name="customButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/nanumsquareround_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custombutton</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/theme_darkgreen</item>
    </style>
</resources>