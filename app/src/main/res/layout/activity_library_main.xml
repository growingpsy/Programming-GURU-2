<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

<!--    <Spinner-->
<!--        android:id="@+id/sorting"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentStart="true"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_marginStart="16dp"-->
<!--        android:layout_marginTop="16dp"-->
<!--        android:layout_marginEnd="16dp" />-->

    <Spinner
        android:id="@+id/filtering"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />
    <!--        android:layout_below="@id/sorting"-->

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filtering"
        android:layout_margin="16dp"
        android:hint="검색"
        android:padding="10dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:background="@android:color/background_light"
        android:textColor="@android:color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchEditText"
        android:layout_margin="16dp">

        <TableLayout
            android:id="@+id/bookShelfTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="16dp"
            android:stretchColumns="*">

            <!-- 표의 첫 번째 행은 빈 책장 모양의 ImageView로 구성 -->
            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">

                <!-- 빈 책장 모양의 ImageView 또는 다른 뷰를 추가 -->
                <Button
                    android:id="@+id/bookShelf1"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:tag="1"
                    android:text="+"
                    android:onClick="onBookShelfButtonClick"/>
                <Button
                    android:id="@+id/bookShelf2"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:tag="2"
                    android:text="+"
                    android:visibility="invisible"
                    android:onClick="onBookShelfButtonClick"/>
                <Button
                    android:id="@+id/additionalBookShelf"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:text="추가 버튼"
                    android:visibility="invisible"
                    android:onClick="onAdditionalBookShelfButtonClick"/>
            </TableRow>

            <!-- 나머지 행들은 동적으로 추가될 예정 -->

        </TableLayout>
    </ScrollView>
</RelativeLayout>
